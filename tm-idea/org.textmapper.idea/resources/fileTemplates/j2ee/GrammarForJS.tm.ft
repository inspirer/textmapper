#set ( $d = "$")
language ${NAME}(js);

module = "${NAME}"
positions = "line,column,offset"
endpositions = "line,offset"

:: lexer

id:      /[a-zA-Z_][a-zA-Z_0-9]*/  (class)  { ${d}${d} = this.token; }
icon:    /[0-9]+/
_skip:   /\/\/.*/       (space)
_skip:   /[\t\r\n ]+/    (space)

'(':   /\(/
')':   /\)/
',':   /,/

class: /class/ (soft)

:: parser

field ::=
	  id icon ;

input ::=
	  class id '(' (field separator ',')* ')'           { console.log(${d}id); }
;
